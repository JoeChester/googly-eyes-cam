<?xml version='1.0' encoding='utf-8'?>
<widget id="de.crossoak.googlyeyes" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Googly Eyes Cam</name>
    <description>
        Augmented Reality Eye Tracking App
    </description>
    <author email="jonas.kleinkauf@informatik.hs-fulda.de" href="http://www.crossoak.de">
        Jonas Kleinkauf
    </author>
    <preference name="Fullscreen" value="true" />
    <preference name="Orientation" value="portrait" />
    <content src="settings.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~5.0.0" />
    <plugin name="cordova-plugin-compat" spec="https://github.com/apache/cordova-plugin-compat.git" />
</widget>
